#include <iostream>
using namespace std;

#define MAX 100

//PROTOTIPOS DE FUNCIONES
void cargar(int vec[], int tam);
void mostrar(int vec[], int tam);
float promedio(int vec[], int tam);
int devolvermaxmin(int vec[], int tam, int& min);

int main () {
    int opcion, A[MAX], n, minimo;
    do {

        cout << "Ingrese e tamano del vector: ";
        cin >> n;
    } while ((n < 0) || (n > MAX));

    do {
        cout << "\t MENU" << endl;
        cout << "\n\n1. Cargar el vector";
        cout << "\n\n2. Mostrar el vector";
        cout << "\n\n3. Caclcular el promedio";
        cout << "\n\n4. Cacular el mayor y el menor";
        cout << "\n\n0. Opcion: ";
        cin >> opcion;
        switch (opcion) {
            case 1: cargar(A, n);
                break;
            case 2: mostrar(A, n);
                break;
            case 3: promedio(A, n);
                break;
            case 4: cout << "El mayor valor es: " << devolvermaxmin(A, n, minimo);
                cout << "El menor valor es: " << minimo;
            case 0: cout << "Salir" << endl;
                break;
            default: cout << "No exitse la opcion" << endl;
                break;
        }
    } while (opcion != 0);
    return 0;

    }
   
//DECLARACIONES

void cargar(int vec[], int tam) {
    for (int i = 0; i < tam; i++) {
        cout << "vec[" << i << "] =";
        cin >> vec[i];
    }
}
void mostrar(int vec[], int tam) {
    for (int i = 0; i < tam; i++) {
        cout << "vec[" << i << "] =";
        cin >> vec[i];
    }
}
float  promedio(int vec[], int tam) {
    float suma = 0;
    for (int i = 0; i < tam; i++)
        suma = suma + vec[i];
    return suma / tam;
}

int devolvermaxmin(int vec[], int tam, int& min) {
    int max = vec[0];
    min = vec[0];
    for (int i = 1; i < tam; i++) {
        if (max < vec[i])
            max = vec[i];
        if (min > vec[i])
            min = vec[i];
    }
    return max;

}
