#include <iostream>
using namespace std;

int main() 
{
    int     opcion, cantidad;
    double  precio=0, subt, total=0;
    
    cout<<"********MENU********\n"<<endl;
    
	cout << "1.Hamburguesa             3 Bs"<< endl;
	cout << "2.Hamburguesa con queso   5 Bs"<< endl;
	cout << "3. Papas fritas           2 Bs"<< endl;
	cout << "4. Soda                   2.5 Bs"<< endl;
	cout << "0. Salir                      "<< endl;

   do {
       cout<<"Ingrese una opcion: "<<;
       cin>>opcion;
       switch (opcion) {
       case 1: precio=3;
            break;
        case 2: precio=5;
            break;
        case 3: precio=2;
            break;
        case 4: precio=2.5;
            break;
        case 0: cout<<"Salir"<<endl;
            break;
        default: 
            cout<<"Error"<<endl;
       }
       if (opcion==0) 
           break;
        else {
            cout<<"Ingrese la cantidad: ";
            cin>>cantidad;
            subt=precio*cantidad;
            total=total+subt;
        }
   }while(opcion!=0);
   
    cout<<"El total apagar es: "<<total;
    
    return 0;
}
