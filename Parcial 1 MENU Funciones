#include <iostream>
#include <cmath>
using namespace std;

double calcularFactorial(int n, double X) {
    double s = 0;
    int fact = 1;

    for (int i = 1; i <= n; i++) {
        fact = fact * i;
        if (i % 2 == 0)
            s = s - (pow(X, i) / fact);
        else
            s = s + (pow(X, i) / fact);
    }
    return s;
}

double calcularSumaPromedio() {
    int N = -20, suma = 0, cont = 0;
    double promedio;

    while (N <= 15) {
        suma = suma + N;
        cout << N << endl;
        N = N + 1;
        cont = cont + 1;
    }
    promedio = suma / (double)cont;  // Aseguramos que el promedio sea un número decimal
    cout << "La suma es igual a: " << suma << endl;
    cout << "Promedio es igual a: " << promedio << endl;
    return promedio;  // Devolvemos el promedio
}

double tiendaDeMascotas() {
    int productos;
    float peso, pesototal;
    int opcion2;
    int contador = 0;

    double total = 0;

    do {
        do {
            cout << "Ingrese el numero de productos: ";
            cin >> productos;
        } while (productos <= 0);

        pesototal = 0;
        do {
            cout << "Ingrese el peso: ";
            cin >> peso;
        } while (peso <= 0);

        for (int i = 0; i < productos; i++) {
            pesototal += peso;
        }

        cout << "El peso total es: " << pesototal << endl;

        int n = contador % 5; // 1,2,3,4,0
        switch (n) {
        case 1: cout << "Tu mascota merece lo mejor, y nosotros te lo llevamos a casa" << endl; break;
        case 2: cout << "Amor en cada entrega, felicidad en cada ladrido" << endl; break;
        case 3: cout << "Productos que hacen ronronear de alegria" << endl; break;
        case 4: cout << "Calidad, cariño y comodidad para tu mascota" << endl; break;
        default: cout << "Haz feliz a tu peludo sin salir de casa" << endl; break;
        }

        total += pesototal;  // Acumulamos el peso total de todos los pedidos

        cout << "¿Desea realizar otro pedido? (1=Si / 0=No): " << endl;
        cin >> opcion2;
        contador++;
    } while (opcion2 == 1);

    cout << "Gracias por su compra" << endl;

    return total;  // Retorna el peso total acumulado
}

int main() {
    int opcion;
    do {
        cout << "Menu" << endl;
        cout << "1. Cálculo de factorial" << endl;
        cout << "2. Cálculo suma y el promedio de -20 a 15" << endl;
        cout << "3. Tienda de mascotas" << endl;
        cout << "0. Salir" << endl;
        cout << "Ingrese una opcion: " << endl;
        cin >> opcion;

        switch (opcion) {
        case 1: {
            int n;
            double X;
            do {
                cout << "Ingrese el valor de X: ";
                cin >> X;
                cout << "Ingrese el valor de n: ";
                cin >> n;
            } while ((X <= 0) || (n <= 0));

            double resultado = calcularFactorial(n, X);
            cout << "La suma es de: " << resultado << endl;
            break;
        }
        case 2:
            calcularSumaPromedio();  // Aunque esta función ahora devuelve el promedio, no necesitamos usarlo aquí.
            break;
        case 3:
            tiendaDeMascotas();  // Esta función devuelve el peso total, pero no lo usamos explícitamente.
            break;
        case 0:
            cout << "Salir" << endl;
            break;
        default:
            cout << "Error: Opción no válida" << endl;
        }
    } while (opcion != 0);

    return 0;
}
