#include <iostream>
 using namespace std;
 
int main ()
{
    int num;
	cout << "Ingrese el num: ";
	cin >> num;
	if (num % 2 == 0)
	{
		if (num>=0)
			cout << "el num es par y positivo";
		else
			cout << "el numero es negativo";
	}
	else
	{
		if (num>=0)
			cout << "el numero es impar";
		else
			cout << "el numero es negativo";
	}
return 0;
}
